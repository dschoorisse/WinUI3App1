<Page
    x:Class="WinUI3App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI3App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    KeyDown="Page_KeyDown"
    Loaded="Page_Loaded"
    Background="Transparent">

  <!-- Root grid - set explicit z-index for child elements -->
    <Grid x:Name="RootGrid" Background="Transparent" Opacity="0">

        <Image x:Name="PageBackgroundImage" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid x:Name="PageBackgroundOverlay" Background="#4C000000" Visibility="Collapsed"/>

        <!-- Main Content -->
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="0"
                Canvas.ZIndex="1">

      <TextBlock Text="Welcome!"
                 x:Name="TitleTextBlock" 
                 FontSize="60"
                 FontWeight="Bold"
                 Foreground="White"
                 TextAlignment="Center"/>

      <TextBlock Text="Capture your perfect moment"
                 x:Name="SubtitleTextBlock"
                 FontSize="32"
                 Foreground="White"
                 TextAlignment="Center"
                 Margin="0,0,0,24"/>

        <Image x:Name="cameraPreview"  
              Source="Assets/placeholder_leeg.jpg"  
              Width="800"  
              Height="600"  
              HorizontalAlignment="Center"  
              VerticalAlignment="Center"  
              Stretch="Uniform"  
              Opacity="1">  
        </Image>

      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center"
                  Spacing="48">         
          
        <!-- Take Photo Button -->
        <Button x:Name="TakePhotoButton"
                Click="TakePhotoButton_Click"
                Width="240"
                Height="160"
                Background="White"
                Foreground="Black"
                CornerRadius="16">
          <StackPanel>
            <FontIcon Glyph="&#xE722;"
                      FontSize="72"
                      HorizontalAlignment="Center"/>
            <TextBlock Text="Take Photos"
                       x:Name="TakePhotoButtonLabel"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Margin="0,16,0,0"
                       TextAlignment="Center"/>
          </StackPanel>
        </Button>
          
        <!-- Test Button -->
        <Button x:Name="TesetButton"
                Click="TestButton_Click"
                Width="240"
                Height="160"
                Background="White"
                Foreground="Black"
                CornerRadius="16">
          <StackPanel>
            <FontIcon Glyph="&#xE714;"
                      FontSize="72"
                      HorizontalAlignment="Center"/>
            <TextBlock Text="Test"
                       x:Name="TestButtonLabel"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Margin="0,16,0,0"
                       TextAlignment="Center"/>
          </StackPanel>
        </Button>

        <!-- Record Video Button -->
        <Button x:Name="RecordVideoButton"
                Click="RecordVideoButton_Click"
                Width="240"
                Height="160"
                Background="White"
                Foreground="Black"
                CornerRadius="16">
          <StackPanel>
            <FontIcon Glyph="&#xE714;"
                      FontSize="72"
                      HorizontalAlignment="Center"/>
            <TextBlock Text="Record Video"
                       x:Name="RecordVideoButtonLabel"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Margin="0,16,0,0"
                       TextAlignment="Center"/>
          </StackPanel>
        </Button>
          
      </StackPanel>
    </StackPanel>

    <!-- Secret Corner Touch Areas -->
    <Grid Background="Transparent"
          Width="100"
          Height="100"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Tapped="TopLeftCorner_Tapped"
          Canvas.ZIndex="1"/>

    <Grid Background="Transparent"
          Width="100"
          Height="100"
          HorizontalAlignment="Right"
          VerticalAlignment="Top"
          Tapped="TopRightCorner_Tapped"
          Canvas.ZIndex="1"/>

    <Grid Background="Transparent"
          Width="100"
          Height="100"
          HorizontalAlignment="Left"
          VerticalAlignment="Bottom"
          Tapped="BottomLeftCorner_Tapped"
          Canvas.ZIndex="1"/>

    <Grid Background="Transparent"
          Width="100"
          Height="100"
          HorizontalAlignment="Right"
          VerticalAlignment="Bottom"
          Tapped="BottomRightCorner_Tapped"
          Canvas.ZIndex="1"/>

    <!-- NEW: Status Indicator Overlay -->
    <Grid x:Name="StatusOverlay" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" Visibility="Collapsed">
        <ItemsControl ItemsSource="{x:Bind StatusItems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="local:StatusItem">
                    <Grid Background="{ThemeResource SystemControlErrorTextForegroundBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="{x:Bind IconGlyph}" Foreground="White"/>
                            <TextBlock Text="{x:Bind Message}" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

    <TextBox x:Name="DebugTextBox"
    Visibility="Collapsed"
    IsReadOnly="True"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    ScrollViewer.VerticalScrollBarVisibility="Auto"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Margin="20"
    MinHeight="100"
    MaxHeight="300"
    Background="#A0000000"
    Foreground="White"
    BorderBrush="Gray"
    BorderThickness="1"
    Canvas.ZIndex="99"/>

  </Grid>
</Page>